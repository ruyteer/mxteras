// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id String @id @default(uuid())
  name String
  description String
  category String
  price Float
  quantity Int
  images String[]
}

model User {
  id String @id @default(uuid())
  name String
  nickname String
  number Int
  email String
  orders Order[]
}

model Coupon {
  id String @id @default(uuid())
  code String
  discount Int
}

model Order {
  id String @id @default(uuid())
  userId String
  productId String
  paymentMethod String
  date String
  quantity Int
  price Float
  orderID Int
  user User @relation(fields: [userId], references: [id])
}